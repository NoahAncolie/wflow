{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:pull": {
      "cache": false,
      "dependsOn": [],
      "outputs": ["packages/db"]
    },
    "db:generate": {
      "cache": false,
      "dependsOn": ["db:pull"],
      "outputs": ["packages/db/drizzle/**"]
    },
    "db:push": {
      "cache": false,
      "dependsOn": ["db:generate"],
      "outputs": []
    },
    "db:studio": {
      "cache": false,
      "dependsOn": ["db:pull"],
      "outputs": []
    }
  }
}

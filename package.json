{
  "name": "WFlow",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:pull": "turbo run db:pull --filter=@wflow/db",
    "db:generate": "turbo run db:generate --filter=@wflow/db",
    "db:push": "turbo run db:push --filter=@wflow/db",
    "db:studio": "turbo run db:studio --filter=@wflow/db"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@types/node": "^24.10.1",
    "nestjs-rbac": "^2025.1.1",
    "postgres": "^3.4.7"
  }
}
